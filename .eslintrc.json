{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [ 
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "max-lines-per-function": [
      "error", {
        "max": 20
      }
    ],
    "max-lines": [
      "error", {
        "max": 300
      }
    ],
    "camelcase": [
      "error", {
        "properties": "always"
      }
    ],
    "no-trailing-spaces": [
      "error"
    ],
    "no-unused-vars": [
      "error", {
        "args": "after-used"
      }
    ]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
